<mah:MetroWindow x:Class="KenshinChat.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:KenshinChat.Client"
        DataContext="{Binding Source={StaticResource VMLocator}, Path=MainVM}"
        mc:Ignorable="d"
        Title="Kenshin Chat Client" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <ContentControl Content="{Binding}" Style="{StaticResource kenshinContentStyle}"/>
    </Grid>
</mah:MetroWindow>
